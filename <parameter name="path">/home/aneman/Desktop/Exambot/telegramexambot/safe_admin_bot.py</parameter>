<parameter name="content">#!/usr/bin/env python3
"""
SAFE ADMIN BOT - NO RECURSION, SINGLE ADMIN HANDLER
Fixes duplicate admin panel messages without infinite loops
"""

import asyncio
import logging
from telegram import Update
from telegram.ext import Application, CommandHandler, CallbackQueryHandler, MessageHandler, filters

# Import handlers
from app.handlers.start_handler import start
from app.handlers.admin_handler import admin_panel
from app.config.settings import BOT_TOKEN
from app.config.constants import ADMIN_IDS

# Enable logging
logging.basicConfig(
    format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', 
    level=logging.INFO
)
logger = logging.getLogger(__name__)

async def safe_admin_panel_handler(update: Update, context):
    """SAFE admin panel handler - prevents recursion"""
    try:
        query = update.callback_query
        await query.answer()
        
        if update.effective_user.id in ADMIN_IDS:
            # Call admin panel with proper error handling
            await admin_panel(update, context)
        else:
            await query.answer("Access denied. Admin privileges required.")
    except Exception as e:
        logger.error(f"Admin panel error: {e}")
        # Don't create infinite loops

async def safe_start_handler(update: Update, context):
    """SAFE start handler - prevents recursion"""
    try:
        await start(update, context)
    except Exception as e:
        logger.error(f"Start handler error: {e}")

async def main():
    """Main bot function with MINIMAL handlers to prevent recursion"""
    application = Application.builder().token(BOT_TOKEN).build()
    
    # ONLY essential handlers - no duplicates
    application.add_handler(CommandHandler("start", safe_start_handler))
    application.add_handler(CommandHandler("admin", safe_admin_panel_handler))
    
    # SINGLE admin callback handler with pattern to prevent multiple triggers
    application.add_handler(CallbackQueryHandler(safe_admin_panel_handler, pattern="^admin$"))
    
    # Minimal text handler
    application.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, safe_start_handler))
    
    logger.info("âœ… SAFE bot started - NO RECURSION, SINGLE admin handler")
    logger.info("ðŸŽ¯ Admin panel will show 1 message (not 3)")
    
    try:
        await application.run_polling()
    except Exception as e:
        logger.error(f"Bot error: {e}")

if __name__ == '__main__':
    try:
        asyncio.run(main())
    except KeyboardInterrupt:
        logger.info("Bot stopped by user")
    except Exception as e:
        logger.error(f"Critical bot error: {e}")</parameter>
